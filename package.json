{
  "name": "@garron/react-chart",
  "version": "0.0.1",
  "description": "react-chart",
  "main": "lib/index.js",
  "module": "es/index.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "files": [
    "lib",
    "es",
    "*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev:doc": "dumi dev",
    "build:docs": "dumi build",
    "test": "jest -u",
    "build": "npm run build:es & npm run build:commonjs",
    "build:es": "cross-env BABEL_ENV=es babel src -d es --extensions .ts,.tsx --delete-dir-on-start",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src -d lib --extensions .ts,.tsx --delete-dir-on-start",
    "build:types": "tsc --declarationDir ./lib & tsc --declarationDir ./es",
    "preversion": "npm run build",
    "lint:eslint": "eslint . --ext=.ts,.tsx --fix",
    "lint:lint-staged": "lint-staged",
    "lint:prettier": "prettier --write  \"src/**/*.{json,tsx,ts}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@antv/g2plot": "^2.3.24",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-private-property-in-object": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@garron/standard": "^1.4.1",
    "@types/eslint": "^8.2.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.177",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-test-renderer": "^17.0.0",
    "@types/string-template": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@umijs/plugin-analytics": "^0.2.1",
    "cross-env": "^7.0.2",
    "dumi": "^1.1.40",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "jest-canvas-mock": "^2.3.0",
    "lint-staged": "^12.1.1",
    "prettier": "^2.6.2",
    "react-test-renderer": "^17.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "string-template": "^1.0.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.0.0",
    "typescript": "^4.5.2"
  },
  "author": {
    "name": "garron",
    "url": "https://github.com/geallenboy"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:geallenboy/react-chart.git"
  },
  "homepage": "https://github.com/geallenboy/react-chart",
  "keywords": [
    "chart",
    "G2Plot",
    "ts",
    "tsx",
    "g2"
  ],
  "license": "MIT",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
